<Window x:Class="CrosshairDesktopWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:vm="clr-namespace:CrosshairDesktopWPF.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrosshairDesktopWPF.Views"
        xmlns:cnvt="clr-namespace:CrosshairDesktopWPF.Views.DataConverters"
        mc:Ignorable="d"
        Title="CrosshairCreator" Height="450" Width="800" Background="Purple">
    <Window.Resources>
        <cnvt:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Background="#401e68">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="1">
            <RadioButton x:Name="rbCreate" Content="Create crosshair"  Style="{StaticResource RadioButtonMenu}"/>
            <RadioButton x:Name="rbSettings" Content="Settings" IsChecked="True" Style="{StaticResource RadioButtonMenu}"/>
            <RadioButton x:Name="rbSave" Content="Save" Style="{StaticResource RadioButtonMenu}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="4" Visibility="Visible">
            <StackPanel Orientation="Horizontal" Margin="4" 
                        Visibility="{Binding ElementName=rbSettings, Path=IsChecked , Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Display width: " Width="130" FontSize="16" Foreground="AntiqueWhite"/>
                <TextBox Width="100" FontSize="16"
                         Text="{Binding DisplayWidth}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4"  
                        Visibility="{Binding ElementName=rbSettings, Path=IsChecked , Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Display height: " Width="130" FontSize="16" Foreground="AntiqueWhite"/>
                <TextBox Width="100" FontSize="16"
                         Text="{Binding DisplayHeight}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
